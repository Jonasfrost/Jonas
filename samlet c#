using System;

class Program
{
    static void Main(string[] args)
    {
        bool runProgram = true;

        while (runProgram)
        {
            Console.Clear();
            Console.WriteLine("=== Hovedmenu ===");
            Console.WriteLine("1) Variabler");
            Console.WriteLine("2) Strings");
            Console.WriteLine("3) Aritmetiske udtryk");
            Console.WriteLine("4) Input/Opsamling");
            Console.WriteLine("5) Variabler i udtryk");
            Console.WriteLine("6) Boolske variable");
            Console.WriteLine("7) If-else statements");
            Console.WriteLine("8) Switch Case");
            Console.WriteLine("9) Loops");
            Console.WriteLine("10) Udvidet kontrolstrukturer");
            Console.WriteLine("11) Metoder og instanser");
            Console.WriteLine("12) Returtyper og parametre");
            Console.WriteLine("13) Nedarvning");
            Console.WriteLine("14) Arrays");
            Console.WriteLine("0) Afslut");
            Console.Write("Vælg et emne: ");

            string input = Console.ReadLine();

            switch (input)
            {
                case "1":
                    VariablerMenu();
                    break;
                case "2":
                    StringsMenu();
                    break;
                case "3":
                    AritmetiskeMenu();
                    break;
                case "4":
                    InputMenu();
                    break;
                case "5":
                    VariabelUdtrykMenu();
                    break;
                case "6":
                    BoolskeMenu();
                    break;
                case "7":
                    IfElseMenu();
                    break;
                case "8":
                    SwitchCaseMenu();
                    break;
                case "9":
                    LoopsMenu();
                    break;
                case "10":
                    UdvidetKontrolMenu();
                    break;
                case "11":
                    MetoderInstanserMenu();
                    break;
                case "12":
                    ReturtyperParametreMenu();
                    break;
                case "13":
                    NedarvningMenu();
                    break;
                case "14":
                    ArraysMenu();
                    break;
                case "0":
                    runProgram = false;
                    break;
                default:
                    Console.WriteLine("Ugyldigt valg. Prøv igen.");
                    Pause();
                    break;
            }
        }
    }

    // --- Variabler Menu ---
    static void VariablerMenu()
    {
        bool runSubmenu = true;

        while (runSubmenu)
        {
            Console.Clear();
            Console.WriteLine("=== Variabler Menu ===");
            Console.WriteLine("1) Udskriv to tal");
            Console.WriteLine("2) Udskriv navn, alder og penge");
            Console.WriteLine("3) Udskriv priser og total");
            Console.WriteLine("0) Tilbage til hovedmenu");
            Console.Write("Vælg en opgave: ");

            string input = Console.ReadLine();

            switch (input)
            {
                case "1":
                    VariablerOpgave1();
                    break;
                case "2":
                    VariablerOpgave2();
                    break;
                case "3":
                    VariablerOpgave3();
                    break;
                case "0":
                    runSubmenu = false;
                    break;
                default:
                    Console.WriteLine("Ugyldigt valg. Prøv igen.");
                    Pause();
                    break;
            }
        }
    }

    static void VariablerOpgave1()
    {
        Console.Clear();
        int tal1 = 5;
        int tal2 = 3;

        Console.WriteLine($"Tal 1 er {tal1}");
        Console.WriteLine($"Tal 2 er {tal2}");

        Pause();
    }

    static void VariablerOpgave2()
    {
        Console.Clear();
        string navn = "Søren";
        int alder = 16;
        double penge = 1234.34;

        Console.WriteLine($"Jeg hedder {navn}, er {alder} år gammel og har tjent {penge} kr. på at lappe cykler.");

        Pause();
    }

    static void VariablerOpgave3()
    {
        Console.Clear();
        double kage = 23.56;
        double oel = 34.67;
        double poelse = 65.34;

        double total = kage + oel + poelse;

        Console.WriteLine($"Kage: {kage} kr.");
        Console.WriteLine($"Øl: {oel} kr.");
        Console.WriteLine($"Pølse: {poelse} kr.");
        Console.WriteLine($"I alt: {total} kr.");

        Pause();
    }

