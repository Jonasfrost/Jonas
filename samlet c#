    }

    static void AritmetiskeOpgave1()
    {
        Console.Clear();

        int result1 = 2 + 1 * 2;
        int result2 = (2 + 1) * 2;
        int result3 = 5 / 2;
        int result4 = 8 % 3;
        int result5 = 1 - 5;

        Console.WriteLine("2 + 1 * 2 = " + result1);
        Console.WriteLine("(2 + 1) * 2 = " + result2);
        Console.WriteLine("5 / 2 = " + result3);
        Console.WriteLine("8 % 3 = " + result4);
        Console.WriteLine("1 - 5 = " + result5);

        Pause();
    }

    // --- Input/Opsamling Menu ---
    static void InputMenu()
    {
        bool runSubmenu = true;

        while (runSubmenu)
        {
            Console.Clear();
            Console.WriteLine("=== Input/Opsamling Menu ===");
            Console.WriteLine("1) Udskriv brugerens navn");
            Console.WriteLine("2) Beregn areal af cirkel");
            Console.WriteLine("0) Tilbage til hovedmenu");
            Console.Write("Vælg en opgave: ");

            string input = Console.ReadLine();

            switch (input)
            {
                case "1":
                    InputOpgave1();
                    break;
                case "2":
                    InputOpgave2();
                    break;
                case "0":
                    runSubmenu = false;
                    break;
                default:
                    Console.WriteLine("Ugyldigt valg. Prøv igen.");
                    Pause();
                    break;
