    static void InputOpgave1()
    {
        Console.Clear();

        Console.Write("Indtast dit navn: ");
        string navn = Console.ReadLine();

        Console.WriteLine($"Hej {navn}! Velkommen til programmet.");

        Pause();
    }

    static void InputOpgave2()
    {
        Console.Clear();

        Console.Write("Indtast radius for cirklen: ");
        string input = Console.ReadLine();

        if (double.TryParse(input, out double radius))
        {
            double areal = Math.PI * radius * radius;
            Console.WriteLine($"Arealet af cirklen med radius {radius} er {areal:F2}");
        }
        else
        {
            Console.WriteLine("Ugyldigt input, prøv med et tal.");
        }

        Pause();
    }

