    static void StringsOpgave1()
    {
        Console.Clear();

        int tal = 10;
        string tekst = "Hej";
        double dec = 5.5;

        Console.WriteLine(tal);
        Console.WriteLine(tekst);
        Console.WriteLine(dec);

        tal = 20;
        tekst = "Farvel";
        dec = 10.1;

        Console.WriteLine("\nEfter ændring:");
        Console.WriteLine(tal);
        Console.WriteLine(tekst);
        Console.WriteLine(dec);

        Pause();
    }

    static void StringsOpgave2()
    {
        Console.Clear();

        double belob = 200.50;
        string startTekst = "Jeg har ";
        string slutTekst = " kr. i banken.";

        Console.WriteLine(startTekst + belob + slutTekst);

        Pause();
    }

