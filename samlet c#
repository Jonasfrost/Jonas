    static void VariabelUdtrykOpgave1()
    {
        Console.Clear();
        // Opgave 1: 3 int variabler, 1 result, operation med alle 3
        int a = 2, b = 3, c = 4;
        int result = a + b * c;
        Console.WriteLine($"a = {a}, b = {b}, c = {c}");
        Console.WriteLine($"Resultat af a + b * c = {result}");
        Pause();
    }

    static void VariabelUdtrykOpgave2()
    {
        Console.Clear();
        // Opgave 2: 3 variabler (int/double), 1 result, mix tal og variabelnavne
        double x = 5.5, y = 2.2, z = 3.3;
        double result = x + y * 2 - z;
        Console.WriteLine($"x = {x}, y = {y}, z = {z}");
        Console.WriteLine($"Resultat af x + y * 2 - z = {result}");
        Pause();
    }

